doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Super Bank
    link(rel='stylesheet', href='css/app.css')
  body
    h1 Super Bank

    h3 Current Balance:
        #display 1000
    #amount
        h3 Enter the amount you'd like to withdraw/deposit:
        input.input(type='text', autofocus=true)
        button#deposit Deposit
        button#withdraw Withdraw

    table#ledger
        thead
            tr
                th.fee Fee
                th.deposit Deposit
                th.withdraw Withdraw
                th.balance Balance
        tbody
            tr
                td.fee
                td.deposit
                td.withdraw
                td.balance 1000

    script(src='js/vendor/jquery-2.1.0.js')
    script(src='js/source/main.js')
